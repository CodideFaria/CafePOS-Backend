# ========================================
# CafePOS Backend Environment Configuration
# ========================================
# Copy this file to .env and update values for your environment

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://cafepos_user:your_secure_password@db:5432/cafepos_db
POSTGRES_DB=cafepos_db
POSTGRES_USER=cafepos_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-32-characters-long

# ========================================
# Email Configuration (Optional)
# Required for password reset and daily reports
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_app_password
SMTP_USE_TLS=true

# ========================================
# Application Configuration
# ========================================
DEBUG=false
CORS_ORIGINS=http://localhost:3000
LOG_LEVEL=INFO

# ========================================
# Data Seeding Configuration
# ========================================
# Set to true to use production data instead of test data
USE_PRODUCTION_DATA=false

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# ========================================
# Security Configuration
# ========================================
# Account lockout settings
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900  # 15 minutes in seconds

# Session settings
SESSION_TIMEOUT=3600  # 1 hour in seconds
REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# ========================================
# Development Settings
# ========================================
# Set to true for development environments
ENABLE_CORS=true
ALLOW_ORIGINS=*

# ========================================
# Production Settings
# ========================================
# Uncomment and configure for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# FORCE_HTTPS=true